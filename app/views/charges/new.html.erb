<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: <%= number_to_currency(@amountInDollars)%></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="!!Enter item being paid for here!!"
          data-amount="<%=@amountInCents%>"></script>
<% end %>